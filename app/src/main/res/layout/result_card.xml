<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kawwali"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center_horizontal"
       android:paddingRight="20dp"
       android:paddingTop="20dp"
       android:paddingLeft="20dp"
       android:paddingBottom="20dp">

       <LinearLayout
           android:layout_width="90dp"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="50dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:text="YAGYA DATT SHARMA PATHAK"
               android:textStyle="italic|bold"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="5dp"
               android:background="@drawable/view_shadow" />
       <TextView
           android:layout_width="85dp"
           android:layout_height="90dp"
           android:layout_gravity="center_horizontal"
           android:layout_marginLeft="0dp"
           android:text="2"
           android:textSize="20dp"
           android:textColor="#fff"
           android:textAlignment="center"
           android:background="@drawable/second_position"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="5dp"
               android:background="@drawable/view_shadow" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="90dp"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:text="Pranjal Gupta"
               android:textStyle="italic|bold"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="5dp"
               android:background="@drawable/view_shadow" />
    <TextView
        android:layout_width="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="140dp"
        android:text="1"
        android:textSize="20dp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:background="@drawable/first_position"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="5dp"
               android:background="@drawable/view_shadow" />
           </LinearLayout>


       <LinearLayout
           android:layout_width="90dp"
           android:layout_marginTop="70dp"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:text="Sooraj Shingari"
               android:textStyle="italic|bold"
               android:layout_marginLeft="10dp"/>

           <View
               android:layout_width="match_parent"
               android:layout_height="5dp"
               android:background="@drawable/view_shadow"/>

       <TextView
           android:layout_width="85dp"
           android:layout_gravity="center_horizontal"
           android:layout_height="70dp"
           android:text="3"
           android:textSize="20dp"
           android:textColor="#fff"
           android:textAlignment="center"
           android:background="@drawable/third_position" />
           <View
               android:layout_width="match_parent"
               android:layout_height="5dp"
               android:background="@drawable/view_shadow" />
           </LinearLayout>
       </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#575757" />

</LinearLayout>
